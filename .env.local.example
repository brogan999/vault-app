# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/mirror
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/mirror
# Clerk webhook (production): add endpoint in Clerk Dashboard, then set signing secret
WEBHOOK_SECRET=your_clerk_webhook_signing_secret

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Anthropic (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
# Required for subscriptions (payments.ts)
STRIPE_PRO_PRICE_ID=your_stripe_pro_price_id
STRIPE_FREE_PRICE_ID=your_stripe_free_price_id
# Optional: one-off products for Store page
NEXT_PUBLIC_STRIPE_DEEP_VEDIC_PRICE_ID=your_stripe_deep_vedic_price_id
NEXT_PUBLIC_STRIPE_SCHEMA_PRICE_ID=your_stripe_schema_price_id

# App URL (optional; defaults to http://localhost:3000 for payments redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Vercel (for deployment)
VERCEL_URL=your_vercel_url